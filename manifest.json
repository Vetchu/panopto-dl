{
    "manifest_version": 3,
    "name": "Panopto Downloader",
    "version": "1.1",
    "action": {
        "default_popup": "popup.html",
        "default_title": "View downloadable Videos"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "webRequest",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://tum.cloud.panopto.eu/*",
        "https://*.cloudfront.net/*",
        "https://stream.lrz.de/*",
        "https://live.rbg.tum.de/*"
    ]
}
